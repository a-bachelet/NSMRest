{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./build/",
    "rootDir": "./src/",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",            
    "rootDirs": ["./src"],
    "typeRoots": ["./node_modules/@types"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./src/**/*.ts"    
  ],
  "exclude": [
    "./node_modules/**/*"
  ]
}